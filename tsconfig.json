{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "zustand-signal": ["./src"],
      "zustand-signal/jsx-runtime": ["./src/jsx-runtime"]
    },
    "outDir": "./dist"
  }
}
